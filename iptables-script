#!/bin/bash
# -- UTF 8 --
 
iptables="/sbin/iptables"
LAN="eth0"
WIFI="wlan0"
#GEASS_CASA_LAN="10.10.0.5"
#GEASS_CASA_WIFI="10.10.0.51"
#CASA_NETWORK="10.10.0.0/24"
#IPI_NETWORK="192.168.1.0/24"
